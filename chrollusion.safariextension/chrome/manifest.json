{
  "manifest_version": 2,
  "name": "Collusion for Chrome",
  "version": "2.2.1",
  "description":
      "Visualize and, optionally, block the invisible websites that track you.",
  "icons": {"48": "images/48.png", "128": "images/128.png"},
  "permissions": [
    "chrome://favicon/",
    "contextMenus",
    "cookies",
    "history",
    "idle",
    "notifications",
    "tabs",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "scripts/vendor/port/port.js",
      "scripts/vendor/jquery/jquery.js",
      "scripts/analytics.js",
      "scripts/recommends.js",
      "scripts/background.js"
    ]
  },
  "browser_action": {
    "default_title": "Display the Collusion graph",
    "default_popup": "markup/index.html"
  },
  "content_scripts": [{
    "matches": ["http://*/*", "https://*/*"],
    "js": [
      "scripts/vendor/port/port.js",
      "scripts/vendor/jquery/jquery.js",
      "scripts/content.js"
    ],
    "run_at": "document_start",
    "all_frames": true
  }]
}
